<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/guide_item"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    

    <ImageView
        android:id="@+id/img_guide"
        android:layout_width="fill_parent"
        android:background="@drawable/abc_ab_bottom_solid_dark_holo"
        android:layout_height="fill_parent" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/btn_query"
        android:padding="10dp"
        android:visibility="gone"
        android:text="@string/guide_start"
      />
<TextView
        android:id="@+id/tv_guide_jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:text="@string/guide_jump"
        android:textSize="16sp" />
</RelativeLayout>