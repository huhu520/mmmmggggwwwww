<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >    
        <RelativeLayout 
            android:layout_height="44dip"
            android:layout_width="fill_parent"
            android:background="@drawable/navi">
        <TextView android:id="@+id/imagebutton_addad_back"
            android:layout_width="44dip"
            android:layout_height="44dip"
            android:layout_centerVertical="true"
			android:background="@drawable/back"/>
        <TextView android:id="@+id/TextView_title_addad"
            android:layout_width="wrap_content"
            android:layout_height="44dip"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:gravity="center"
            android:ellipsize="end"
            android:maxEms="10"
            android:singleLine="true"
            android:text="添加广告"/>
    </RelativeLayout>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/liLayout_addad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
        

    <TextView
           android:id="@+id/textView_title_ad"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="14sp"
           android:textColor="#333333"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="15dp"
           android:text="广告标题" />

   <EditText
       android:id="@+id/et_title_ad"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"       
       android:layout_marginLeft="15dp"
       android:layout_marginRight="15dp"
       android:layout_marginTop="5dp"          
        />

    <TextView
           android:id="@+id/textView_adfengmian"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="14sp"
           android:textColor="#333333"
           android:layout_marginTop="15dp"
           android:layout_marginLeft="15dp"
           android:text="封面图片" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
          <ImageView
        android:id="@+id/imageView_adcover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"    
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"          
        android:src="@drawable/moren0" />

          
        <ImageButton
                 android:id="@+id/button_deletecover"
                 android:layout_width="match_parent"
                 android:layout_height="25dp"
                 android:layout_alignParentBottom="true"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentRight="true"
                 android:layout_marginLeft="15dp"
                 android:layout_marginRight="15dp"
                 android:alpha="0.5"
                 android:visibility="gone"
                 android:src="@drawable/s_icon" />
          
    </RelativeLayout>   
    <TextView
           android:id="@+id/textView_adimg"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="14sp"
           android:textColor="#333333"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="15dp"
           android:text="广告图片" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp" 
            android:layout_weight="1" >
            <ImageView
        android:id="@+id/imageView_firstadimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"                                 
        android:src="@drawable/moren0" />           
             <ImageButton
                 android:id="@+id/button_deletefirstimg"
                 android:layout_width="match_parent"
                 android:layout_height="20dp"
                 android:layout_alignParentBottom="true"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentRight="true"
                 android:visibility="gone"
                android:alpha="0.5"
                 android:src="@drawable/s_icon" />

        </RelativeLayout>
         <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp" 
            android:layout_weight="1" >
              <ImageView
        android:id="@+id/imageView_nextadimg"
        android:layout_width="match_parent"
       
        android:layout_height="wrap_content"                
        android:src="@drawable/moren0" />

               <ImageButton
                 android:id="@+id/button_deletenextimg"
                 android:layout_width="match_parent"
                 android:layout_height="20dp"
                 android:layout_alignParentBottom="true"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentRight="true"
                 android:alpha="0.5"
                  android:visibility="gone"
                 android:src="@drawable/s_icon" />

           </RelativeLayout>
         <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
           android:layout_marginLeft="2dp"   
            android:layout_weight="1" >
              

                <ImageView
                    android:id="@+id/imageView_thirdadimg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/moren0" />
              <ImageButton
                 android:id="@+id/button_deletethirdimg"
                 android:layout_width="match_parent"
                 android:layout_height="20dp"
                 android:layout_alignParentBottom="true"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentRight="true"
                  android:visibility="gone"
                  android:alpha="0.5"
                 android:src="@drawable/s_icon" />
               </RelativeLayout>
         
    </LinearLayout>
  
  <TextView
           android:id="@+id/textView_adabstract"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="14sp"
           android:textColor="#333333"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="15dp"
           android:text="广告摘要" />
  <EditText
           android:id="@+id/et_abstract_ad"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="在此处填写广告摘要"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           android:layout_marginTop="5dp"
           android:maxLines="2"
           android:minHeight="40dp"
           android:padding="5dp"
           android:textSize="16sp" />
   
    <TextView
           android:id="@+id/textView_addetail"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="14sp"
           android:textColor="#333333"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="15dp"
           android:text="广告详情" />
  <EditText
           android:id="@+id/et_detail_ad"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="在此处填写广告详情"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           android:layout_marginTop="5dp"
           android:minHeight="80dp"    
           android:padding="5dp"
           android:textSize="16sp" />
    

  <Button
          android:id="@+id/button_savead"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="#009933"
          android:paddingBottom="10dp"
          android:paddingLeft="20dp"
          android:paddingRight="20dp"
          android:paddingTop="10dp"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:layout_marginTop="15dp"
          android:layout_marginBottom="15dp"
          android:text="保存"
          android:textColor="@color/white"
          android:textSize="15sp" />
    </LinearLayout>
        </ScrollView>
</LinearLayout>
