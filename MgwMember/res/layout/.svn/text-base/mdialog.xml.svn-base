<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android_custom="http://schemas.android.com/apk/res/com.mgw.member"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99FFFFFF" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#fff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#17AEC9"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <RelativeLayout
                android:id="@+id/rl_updata_download"
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" >

                <ImageView
                    android:id="@+id/iv_updata_download"
                    android:layout_width="90dip"
                    android:layout_height="90dip"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/update"
                  />

                <TextView
                    android:id="@+id/tv_install"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="11dp"
                    android:text="安装"
                       android:visibility="gone"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />

                <com.mgw.member.ui.widget.RoundProgressBar
                    android:id="@+id/roundProgressBar"
                    android:layout_width="90dip"
                    android:layout_height="90dip"
                    android:layout_alignBottom="@+id/iv_updata_download"
                    android:layout_centerHorizontal="true"
                    android_custom:roundColor="#17AEC9"
                       android:visibility="gone"
                    android_custom:roundProgressColor="#FFFFFF"
                    android_custom:roundWidth="4dip"
                    android_custom:textColor="#9A32CD"
                    android_custom:textIsDisplayable="true"
                    android_custom:textSize="18sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_updata_vn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_updata_download"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:text="最新版本："
                android:textColor="#ffffff" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_md_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="新版功能："
                    android:textColor="#666666"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_lin1"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="15dp"
                    android:background="#cccccc" />

                <TextView
                    android:id="@+id/tv_md_FVersion_Explain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="5dp"
                    android:text="TextViessss"
                    android:textColor="#666666"
                    android:textSize="16sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>