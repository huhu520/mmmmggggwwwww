<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity_" 
    android:orientation="vertical"
    android:background="@drawable/bg">
    <RelativeLayout android:layout_height="44dip"
        android:layout_width="fill_parent">
        <TextView android:id="@+id/back"
            android:layout_width="44dip"
            android:layout_height="44dip"
            android:layout_centerVertical="true"
			android:background="@drawable/back"/>
        <TextView android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="44dip"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:textSize="18dip"
            android:gravity="center"
            android:text="会员帐号获取"/>
    </RelativeLayout>
    
    <TextView android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#40FFFFFF"/>

    <EditText android:id="@+id/tel"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="40dip"
        android:textSize="18dip"
        android:hint="请输入美顾问财富卡号"
        android:textColorHint="#AAAAAA"
        android:textColor="#000000"
        android:inputType="number"
        android:padding="5dip"
        android:singleLine="true"
        android:drawableLeft="@drawable/user_icon"
        android:background="@drawable/input_top"/>
    
    <TextView android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="#AAAAAA"/>
    
    <EditText android:id="@+id/password"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:textSize="18dip"
        android:hint="请输入开卡店预留手机"
        android:textColorHint="#AAAAAA"
        android:textColor="#000000"
        android:padding="5dip"
        android:singleLine="true"
        android:inputType="number"
        android:drawableLeft="@drawable/code_icon"
        android:background="@drawable/input_bottom"/>
    
     <Button android:id="@+id/login"
	        android:layout_width="fill_parent"
	        android:layout_height="44dip"
	        android:layout_margin="20dip"
	        android:text="下一步"
	        android:textSize="18dip"
	        android:textColor="#FFFFFF"
	        android:background="@drawable/login"/>
    
</LinearLayout>