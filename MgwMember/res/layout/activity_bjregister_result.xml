<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity_" 
    android:orientation="vertical"
    android:background="@color/bg3">
    <include layout="@layout/title_bar"/>
    
            
    <TextView android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="20dp"
    	android:layout_marginRight="20dp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:hint="您的会员账号(账号和手机号码均可登录)"
        android:textColorHint="@color/languagegray"
        android:textSize="15sp"
        android:drawablePadding="10dp"/>
    <TextView android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="20dp"
    	android:layout_marginRight="20dp"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_user"
        android:textColorHint="@color/languagegray"
        android:textSize="15sp"
        android:id="@+id/info0"
        android:drawablePadding="10dp"/>
    <TextView android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="20dp"
    	android:layout_marginRight="20dp"
        android:padding="10dp"
        android:textColorHint="@color/languagegray"
        android:textSize="15sp"
        android:id="@+id/info1"
        android:drawablePadding="10dp"/>
    <Button android:layout_marginTop="30dp"
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
            android:text="完成"
    	android:layout_marginLeft="20dp"
    	android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:background="@drawable/select_moregreen_btn"
            android:textSize="15sp"
            android:padding="10dp"
            android:id="@+id/login"/>
</LinearLayout>
