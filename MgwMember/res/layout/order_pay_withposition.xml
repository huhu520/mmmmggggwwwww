<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg2"
    android:orientation="vertical" >
    
    <include layout="@layout/title_bar_withshare" />
	<ScrollView 
	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
	    
	    
	    
	    >
	    
	
	    
	   
	<LinearLayout 
	    android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
	    android:orientation="vertical"
	    android:padding="15dp"
	    android:background="@color/bg2"
	    >
	    
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:background="@drawable/bound_line"
	        android:id="@+id/ll_order_pay_address"
	        >
	        <TextView 
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp"
	            android:layout_width="wrap_content"
    			android:layout_height="44dp"
	            android:text=""
	            android:textSize="15sp"
	            android:textColor="#404040"
	            android:gravity="center_vertical"
	            android:id="@+id/tv_order_pay_address"
	            />
	        <View 
	            android:layout_width="fill_parent"
    			android:layout_height="1px"
	            android:background="@color/linegrey"
	            />
	        <TextView 
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp"
	            android:layout_width="wrap_content"
    			android:layout_height="44dp"
	            android:text="只工作日送货"
	            android:textSize="14sp"
	            android:textColor="#808080"
	            android:gravity="center_vertical"
	            android:id="@+id/tv_order_pay_option"
	            />
	        
	    </LinearLayout>
	    
	    
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_marginTop="10dp"
	            android:background="@drawable/bound_line"
	        >
	        <RelativeLayout 
	             android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
	            android:padding="10dp"
	            
	            >
	           <TextView 
	                android:layout_centerVertical="true"
	                 android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:layout_alignParentLeft="true"
    				android:ellipsize="end"
	                android:text="天绚时尚磨毛四件套"
	                android:textSize="15dp"
	                android:textStyle="bold"
	                android:lines="1"
	                android:paddingTop="5dp"
	                android:paddingBottom="5dp"
	                android:textColor="#808080"
	                android:layout_marginRight="100dp"
	                android:id="@+id/tv_order_pay_pname"
	                />
	            <TextView 
	                android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"
	                 android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
	                android:text="129元"
	                android:textColor="#808080"
	                android:textSize="15sp"
	                android:textStyle="bold"
	                android:id="@+id/tv_order_pay_price"
	                />
	             
	        </RelativeLayout>
	        <View 
	            android:layout_width="fill_parent"
    			android:layout_height="1px"
    			android:background="@color/linegrey"
	            
	            />
	        <RelativeLayout 
	             android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
	          android:padding="10dp"
	            >
	            <TextView 
	                android:layout_centerVertical="true"
	                 android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
	                android:text="数量"
	                android:textSize="15sp"
	                android:paddingTop="5dp"
	                android:paddingBottom="5dp"
	                android:textColor="#808080"
	                />
	            <TextView 
	                android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"
	                 android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
	                android:text="1"
	                android:textColor="#808080"
	                android:textSize="13sp"
	                android:id="@+id/tv_order_pay_count"
	                />
	            
	        </RelativeLayout>
	        <View 
	            android:layout_width="fill_parent"
    			android:layout_height="1px"
    			android:background="@color/linegrey"
	            
	            />
	        <RelativeLayout 
	             android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
	            
	            android:padding="10dp"
	            
	            >
	            <TextView 
	                android:layout_centerVertical="true"
	                 android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
	                android:text="总价"
	                android:textSize="15sp"
	                android:paddingTop="5dp"
	                android:paddingBottom="5dp"
	                 android:textColor="#808080"
	                />
	            <TextView 
	                android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"
	                 android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
	                android:text="129元"
	                android:textSize="15sp"
	                android:textColor="#808080"
	                 android:id="@+id/tv_order_pay_totalprice"
	                />
	            
	        </RelativeLayout>
	    </LinearLayout>
	    
	    <TextView 
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"
	        android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
	        android:text="选择支付方式"
	        android:textColor="#808080"
	        android:textSize="13sp"
	        
	        />
	    
	    
	    <include layout="@layout/pay_card_kind"/>
	    
	    
	    <Button 
	        android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
	        android:text="确认支付"
	        android:textSize="18sp"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp"
	        android:textColor="@color/white"
	        android:background="@drawable/select_orange_btn"
	        android:layout_marginTop="30dp"
	        android:id="@+id/bt_order_pay_ok"
	        />
	    
	    
	</LinearLayout>
	
	</ScrollView>
    
</LinearLayout>
