<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/slowblue2" >

        <Button
            android:id="@+id/bt_titlebar_left"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/tv_title_cent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="消费券使用方法"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_step_0" />

            <View
                android:layout_width="1dp"
                android:layout_height="68dp"
                android:layout_gravity="center_horizontal"
                android:background="#F66019" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_step_1" />

            <View
                android:layout_width="1dp"
                android:layout_height="68dp"
                android:layout_gravity="center_horizontal"
                android:background="#F66019" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_step_2" />

            <View
                android:layout_width="1dp"
                android:layout_height="68dp"
                android:layout_gravity="center_horizontal"
                android:background="#F66019" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_step_3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_step"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="会员到店消费，如要求预约请提前预约"
                android:textColor="#808080"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_step"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="会员结账时，扫店内二维码"
                android:textColor="#808080"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_step"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="收银员扣除消费券抵用消费金额"
                android:textColor="#808080"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_step"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="会员完成使用消费券"
                android:textColor="#808080"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>