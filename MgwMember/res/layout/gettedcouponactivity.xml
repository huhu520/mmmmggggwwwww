<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/gettitlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="#17AEC9" >

        <Button
            android:id="@+id/ibBack_getedcoupon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/tv_getedcoupon"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="抢福利券"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        
        android:layout_below="@+id/gettitlebar"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/biankuang"
        android:orientation="vertical" >
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
             <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/tv_goodluck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="恭喜您！"
                android:textColor="#ec6941"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_succese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="抢券成功"
                android:textColor="#333333"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_getedcoupon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="#00bcd4" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/linegrey" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="注意事项"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/linegrey" />

        <TextView
            android:id="@+id/tv_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:text="有效期"
            android:textColor="#ec6941" />

        <TextView
            android:id="@+id/tv_getedcoupon_canusetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="3dp"
            android:text=""
            android:textColor="#919191" />

        <TextView
            android:id="@+id/tv_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:text="使用方法:"
            android:textColor="#ec6941" />

        <TextView
            android:id="@+id/tv_attention2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:text="" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/linegrey" />

        <TextView
            android:id="@+id/tv_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:text="温馨提示："
            android:textColor="#ec6941" />
        <TextView
            android:id="@+id/tv_getedcoupon_canuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="3dp"
            android:text="到店消费时，点“扫一扫”，扫描店内二维码，店内即可看到您的消费券"
            android:textColor="#919191" />
    </LinearLayout>
     </ScrollView>
             </LinearLayout>
       
    <TextView
        android:id="@+id/tv_seemycoupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="15dp"
        android:text="查看我的消费券>>"
        android:textColor="#ec6941" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <Button
            android:id="@+id/bt_getedcoupon_givefriend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             android:background="#ec6941"
             android:textColor="#ffffff"
            android:paddingTop="10dp"
        android:paddingBottom="10dp"
             android:layout_marginRight="1dp"
            android:text="赠送给朋友" />

        <Button
            android:id="@+id/bt_getedcoupon_toshop"
            android:layout_width="0dp"
            android:layout_marginLeft="1dp"
            android:paddingTop="10dp"
        android:paddingBottom="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             android:background="#ec6941"
             android:textColor="#ffffff"
            android:text="进店看看" />
    </LinearLayout>

    

</RelativeLayout>