<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/slowblue2"
     >
    
    
    <Button
        android:layout_centerVertical="true" 
        android:layout_alignParentLeft="true"
        android:layout_width="44dp"
    	android:layout_height="44dp"
        android:background="@drawable/back"
        android:id="@+id/bt_titlebar_left"
        />
    
     <TextView
         android:layout_centerVertical="true"  
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="搜索"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:id="@+id/tv_title_bar_search"
        android:layout_marginRight="10dp"
	    android:background="@drawable/btn_gray_click"
        />
     
   <EditText
        android:focusable="true"
        android:focusableInTouchMode="true"
         android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
		android:paddingLeft="5dp"
		android:paddingRight="5dp"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
        android:hint="按名称搜索"
        android:layout_centerVertical="true"
        android:id="@+id/et_title_bar_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/tv_title_bar_search"
        android:layout_toRightOf="@id/bt_titlebar_left"
        android:background="@drawable/bg_edittext"
        android:lines="1"
        android:drawableLeft="@drawable/ic_search"
        android:drawablePadding="10dp"
        android:textSize="15sp" />

</RelativeLayout>
